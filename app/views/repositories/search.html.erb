<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<% if @body_hash %>
<h1>Repositories</h1>
<% @body_hash.each do |result| %>
  <li><%= result['name'] %>
  <a href="<%= result['html_url'] %>"><%= result['html_url'] %></a>
<%= result['description'] %> </li>
<br>
<% end %>
<% end %>

